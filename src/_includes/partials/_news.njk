
{# News #}

{% set posts = collections.posts | filterNonArchived %}
{% if posts | length > 0 %}
<section class="mb-16">
  <h1 class="text-center mb-8 text-neutral-100 text-xl font-bold">What's new?</h1>

  {% for post in posts %}

  <h2 class="text-center mb-2 text-neutral-100 font-semibold">{{ post.data.title }}</h2>

  <div class="text-center mb-6 prose">{{ post.content | safe }}</div>
  {% endfor %}

  {# <p class="text-center text-neutral-400 italic">For a trip down memory lane, check out the <a
      href="{{ site.baseUrl }}/archives" class="text-sky-500 hover:text-sky-400">archives</a> with older posts.</p> #}
</section>
{% endif %}