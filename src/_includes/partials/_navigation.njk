<div id="menu" class="bg-black h-16 fixed w-full z-50 hidden">
    <nav class="bg-black flex items-center justify-between max-w-3xl mx-auto w-full">

        <!-- Friction logo (functions as home link as well) -->
        <a href="{{ site.baseUrl }}/" id="logo" class="inline-block p-4 uppercase font-semibold text-xl tracking-wider 
        {% if page.url === '/' %}text-neutral-100{% else %}text-neutral-100 hover:text-sky-400{% endif %}"
            style="width: 150px;">
            {% include "svg/logo.svg" %}
        </a>

        <!-- Top navigation for bigger screens -->
        <div class="hidden sm:flex justify-end">{% include "partials/_navi_links.njk" %}</div>

        <!-- Mobile navigation toggle for small screens -->
        <div class="flex justify-end sm:hidden">
            <button id="menuToggle" class="hidden p-4 text-xl text-gray-300 hover:text-sky-400">
                <i class="fas fa-bars"></i>
            </button>
        </div>


    </nav>
</div>
<!-- Navigation for non-JS users -->
<noscript>
    <div id="menu" class="bg-black w-full z-50 pb-4" style="margin-bottom: -4rem;">
        <nav class="bg-black max-w-3xl mx-auto w-full">

            <!-- Friction logo (functions as home link as well) -->
            <a href="{{ site.baseUrl }}/" id="logo" class="inline-flex p-3 uppercase font-semibold text-xl tracking-wider 
            {% if page.url === '/' %}text-neutral-100{% else %}text-neutral-100 hover:text-sky-400{% endif %}"
                style="height: 50px;">
                {% include "svg/logo.svg" %}
            </a>

            {% set mobileNavi = true %}
            {% include "partials/_navi_links.njk" %}

        </nav>
    </div>
</noscript>

<!-- Full-screen Overlay Mobile Menu -->
<div id="mobileMenu" class="hidden fixed inset-0 bg-black bg-opacity-95 z-50 flex justify-center items-center ">

    <!-- Close Button -->
    <button id="menuClose" class="p-4 absolute top-0 right-0 text-gray-300 text-2xl">
        <i class="fas fa-times"></i> <!-- Close icon -->
    </button>

    <!-- Menu Items -->
    <nav>
        {% set mobileNavi = true %}
        {% include "partials/_navi_links.njk" %}
        <div class="mt-12">{% include "partials/_social.html" %}</div>
    </nav>
</div>