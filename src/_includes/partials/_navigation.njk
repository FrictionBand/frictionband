<div class=" bg-black h-16 fixed w-full z-50">
    <nav class="flex items-center justify-between max-w-3xl mx-auto w-full">

        <!-- Friction logo (functions as home link as well) -->
        <a href="{{ site.baseUrl }}/" class="inline-block p-4 uppercase font-semibold text-xl tracking-wider 
            {% if page.url === '/' %}text-neutral-100{% else %}text-neutral-100 hover:text-sky-400{% endif %}"
            style="width: 150px;">
            {% include "svg/logo.svg" %}
        </a>

        <!-- Top navigation for bigger screens -->
        <div class="hidden sm:flex justify-end">
            {% include "partials/_navi_links.njk" %}
            {# {% include "partials/_social.html" %} #}

        </div>

        <!-- Mobile navigation toggle for small screens -->
        <div class="flex justify-end sm:hidden">
            <button id="menuToggle" class="p-4 text-xl text-gray-300 hover:text-sky-400">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <!-- Mobile navigation for non-JS users -->
        <noscript>
            <div class="block">
                {% include "partials/_navi_links.njk" %}
            </div>

        </noscript>

    </nav>
</div>

<!-- Full-screen Overlay Mobile Menu -->
<div id="mobileMenu" class="hidden fixed inset-0 bg-black bg-opacity-90 z-50 flex justify-center items-center ">
    <!-- Close Button -->
    <button id="menuClose" class="p-4 absolute top-0 right-0 text-gray-300 text-2xl">
        <i class="fas fa-times"></i> <!-- Close icon -->
    </button>
    <!-- Menu Items -->
    <nav>
        <!-- Include Home link and special "gigs" link to jump in the page -->
        <a href="{{ site.baseUrl }}/" class="p-4 uppercase font-extrabold items-center 
        block text-center  text-gray-300 hover:text-sky-400">
            Home
        </a>
        <a id="gigs-link" href="{{ site.baseUrl }}/#gigs" class="p-4 uppercase font-extrabold items-center 
        block text-center  text-gray-300 hover:text-sky-400">
            Upcoming Gigs
        </a>
        {% set mobileNavi = true %}
        {% include "partials/_navi_links.njk" %}
        <div class="mt-12">{% include "partials/_social.html" %}</div>
    </nav>
</div>